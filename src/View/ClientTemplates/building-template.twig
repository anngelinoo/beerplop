{% verbatim %}
  <script id="building-template" type="text/template">
    <h3>{{ #t }}"buildings"{{ /t }}:</h3>
    {{ #buildings }}
      <div class="building-container clearfix" data-building-key="{{ key }}">
        <div id="building-container-popover-{{ key }}"
             class="building-container-popover details-modal-button"
             data-toggle="popover"
             data-trigger="hover"
             data-boundary="window"
             data-placement="left"
             title="{{ #t }}"building.{{ key }}.plural"{{ /t }}"
             data-html="true"
             data-building-key="{{ key }}"
        >
          <svg aria-label="{{ #t }}
              "aria.buildingDetails",
              {"__BUILDING__": "{{ #t }}"building.{{ key }}.plural"{{ /t }}"}{{ /t }}"
          >
            <use xlink:href="#svg-{{ key }}"></use>
          </svg>
        </div>

        <div id="building-container-{{ key }}" class="building">
          <div class="float-right beerwarts__enchant-building-container d-none">
            <i class="fas fa-magic beerwarts__enchant-building" data-building-key="{{ key }}"></i>
            <span class="enchantment-level">
              (<span class="enchantment-level__{{ key }}"></span>)
            </span>
          </div>

          <p>
            {{ #t }}"building.{{ key }}.plural"{{ /t }}: <span class="amount-{{ key }}">0</span><br />
            <span class="building-container__costs-label">
              {{ #t }}"costs"{{ /t }}: {{ #t }}
                "plopValue",
                {"__VALUE__": "<span id=\"cost-next-{{ key }}\" class=\"label-cost\"></span>"}
              {{ /t }}
            </span>
            <span class="building-container__costs-label d-none">
              {{ #t }}"available"{{ /t }}: <span id="available-buildings-{{ key }}"></span>
            </span>
          </p>
          <div class="building-container__cloning-container">
            <fieldset class="float-left fieldset-buy" disabled>
              <button id="buy-building-{{ key }}"
                      type="button"
                      class="btn btn-raised btn-primary buy"
                      data-building="{{ key }}"
              >
                {{ #t }}"building.{{ key }}"{{ /t }}
              </button>
            </fieldset>
            <div class="level-up-tooltip float-right"
                 data-toggle="tooltip"
                 data-boundary="window"
                 data-placement="left"
                 data-html="true"
            >
              <fieldset disabled>
                <button id="level-up-{{ key }}"
                        type="button"
                        class="btn btn-raised btn-secondary level-up"
                        data-building="{{ key }}"
                >
                  {{ #t }}"building.levelUp", {"__LEVEL__": "I"}{{ /t }}
                </button>
              </fieldset>
            </div>
          </div>

          <div class="building-container__cloning-container d-none">
            <div class="building-container__clone-tooltip"
                 data-toggle="tooltip"
                 data-boundary="window"
                 data-placement="left"
                 data-html="true"
            >
              <fieldset disabled>
                <button type="button"
                        class="btn btn-raised btn-primary building-container__clone-building"
                        style="width:100%"
                        data-building-key="{{ key }}"
                >
                  {{ #t }}"beerCloner.cloning.clone"{{ /t }} <span class="clone-level"></span>
                </button>
              </fieldset>
            </div>
          </div>
        </div>

        <div class="toggle-minigame d-none"
             data-toggle="collapse"
             data-target="#minigame-collapse__{{ key }}"
        >
          {{ #t }}"minigame"{{ /t }}
        </div>
      </div>
    {{ /buildings }}

    <div class="adv">
      <a href="https://shop.spreadshirt.de/beerplop/" target="_blank">
        <img src="img/shirt__wish-you-were-beer.jpeg" />
      </a>
    </div>
  </script>
{% endverbatim %}
